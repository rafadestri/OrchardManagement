@model OrchardManagement.Models.Tree

@{
    ViewData["Title"] = "Edit Trees";
}

<h1>Edit</h1>

<h4>Tree</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpeciesID" class="control-label"></label>
                <select asp-for="SpeciesID" class="form-control" asp-items="ViewBag.SpeciesID"></select>
                <span asp-validation-for="SpeciesID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>
                            <td>
                                Tree Groups </br>
                                @{
                                    List<AssignedGroupData> treeGroups = ViewBag.TreeGroups;

                                    foreach (var treeGroup in treeGroups)
                                    {
                                        @:
                                        <input type="checkbox" name="selectedTreeGroups" value="@treeGroup.TreeGroupID"
                                               @(Html.Raw(treeGroup.Assigned ? "checked=\"checked\"" : "")) />
                                        @treeGroup.Name <br />
                                    }
                                @:</td></tr>
                                }
                            </table>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
